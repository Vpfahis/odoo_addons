<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_school_student_list" model="ir.ui.view">
        <field name="name">school_student.list</field>
        <field name="model">school.student</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="class_id"/>
                <field name="class_teacher"/>
                <field name="subject" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school_student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_address"/>
                        <field name="parent_name" />
                        <field name="parent_phone"/>
                        <field name="class_id"/>
                        <field name="class_teacher"/>
                        <field name="subject"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_student_kanban" model="ir.ui.view">
        <field name="name">school_student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="class_id"/>
                <field name="class_teacher"/>
                <field name="subject"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong><br/>
                            <span>Class: <field name="class_id"/></span><br/>
                            <span>Teacher: <field name="class_teacher"/></span><br/>
                            <span>Subjects: <field name="subject" widget="many2many_tags"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>