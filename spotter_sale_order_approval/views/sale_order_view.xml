<odoo>
  <record id="view_order_form_sale_approval" model="ir.ui.view">
    <field name="name">sale.order.form.approval.simple</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='state']" position="after">
        <field name="show_approve_button" invisible="1"/>
        <field name="is_fully_approved" invisible="1"/>
        <field name="needs_approval" invisible="1"/>
      </xpath>

      <xpath expr="//header" position="inside">
        <button name="action_approve_order"
                type="object"
                string="Approve"
                class="btn-primary"
                invisible="not show_approve_button"/>
      </xpath>

<!--      <xpath expr="//button[@name='action_quotation_send']" position="attributes">-->
<!--        <attribute name="invisible">not is_fully_approved</attribute>-->
<!--      </xpath>-->

      <xpath expr="//sheet" position="before">
        <div class="alert alert-warning" role="alert" invisible="not needs_approval">
          <strong>Approval Required:</strong> This order requires approval before it can be confirmed or sent to customer.
        </div>
      </xpath>

      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="approved_by_user_ids"
               string="Approved By"
               widget="many2many_tags"
               readonly="1"
               invisible="not approved_by_user_ids"/>
      </xpath>
    </field>
  </record>
</odoo>