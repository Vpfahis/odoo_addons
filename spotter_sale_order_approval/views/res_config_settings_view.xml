<odoo>
  <record id="res_config_settings_view_form_sale_approval" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.sale.approval</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//block[@name='quotation_order_setting_container']" position="after">
        <block title="Sale Order Approval" id="so_approval_setting_container">
          <setting id="sale_approval_users"
                   string="Sale Order Approval"
                   help="Select users who must approve sale orders above 25k.">
            <field name="enable_approval"/>
            <label class="o_light_label me-2" for="approval_user_ids" invisible="not enable_approval"/>
            <field name="approval_user_ids" invisible="not enable_approval" widget="many2many_tags"/>
          </setting>
        </block>
      </xpath>
    </field>
  </record>
</odoo>