<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_provider_cod_inherit" model="ir.ui.view">
        <field name="name">payment.provider.cod.form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="cod_charge_condition_ids"
                       widget="one2many_list"
                       invisible="code != 'cod'"
                       string="COD Charge Conditions">
                    <list editable="bottom">
                        <field name="min_amount" string="Min Amount"/>
                        <field name="max_amount" string="Max Amount"/>
                        <field name="extra_charge" string="Extra Charge"/>
                    </list>
                </field>
            </xpath>
        </field>
    </record>

    <!-- Add COD provider to payment method list -->
    <record id="payment_method_cod_view" model="ir.ui.view">
        <field name="name">payment.method.cod.form</field>
        <field name="model">payment.method</field>
        <field name="inherit_id" ref="payment.payment_method_form"/>
        <field name="arch" type="xml">
            <field name="code" position="attributes">
                <attribute name="readonly">code == 'cod'</attribute>
            </field>
        </field>
    </record>
</odoo>