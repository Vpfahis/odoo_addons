<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Payment Provider -->
        <record id="payment_provider_cod" model="payment.provider">
            <field name="name">Cash on Delivery</field>
            <field name="code">cod</field>
            <field name="state">enabled</field>
            <field name="is_published">True</field>
        </record>

        <!-- Payment Method -->
        <record id="payment_method_cod" model="payment.method">
            <field name="name">Cash on Delivery</field>
            <field name="code">cod</field>
            <field name="sequence">100</field>
            <field name="active">True</field>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <field name="support_refund">none</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_cod'))]"/>
        </record>
</odoo>
