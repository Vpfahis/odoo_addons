<odoo>
    <record id="view_payment_acquirer_form_razorpay" model="ir.ui.view">
        <field name="name">payment.acquirer.form.razorpay</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.view_payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='credentials']" position="inside">
                <group>
                    <field name="razorpay_key_id"/>
                    <field name="razorpay_key_secret"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
