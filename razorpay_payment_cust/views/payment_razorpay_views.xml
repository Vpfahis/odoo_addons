<odoo>
    <record id="view_payment_provider_form_razorpay" model="ir.ui.view">
        <field name="name">payment.provider.form.razorpay</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="inside">
                <field name="razorpay_key_id"/>
                <field name="razorpay_key_secret"/>
            </xpath>
        </field>
    </record>
</odoo>
