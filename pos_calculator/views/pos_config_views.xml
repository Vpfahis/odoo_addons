<odoo>
    <record id="view_pos_config_form_calculator" model="ir.ui.view">
        <field name="name">pos.config.form.calculator</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[field[@name='is_posbox']]" position="after">
                <setting string="Virtual Calculator" help="Enable calculator in POS screen.">
                    <field name="enable_calculator"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
