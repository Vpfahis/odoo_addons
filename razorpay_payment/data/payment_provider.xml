<?xml version="1.0" encoding="utf-8" ?>
<odoo >
    <record id="payment_provider_razorpay_payment" model="payment.provider">
        <field name="name">Razorpay Custom</field>
        <field name="code">razorpay</field>
        <field name="image_128" type="base64" file="payment_razorpay/static/description/icon.png"/>
        <field name="module_id" ref="base.module_razorpay_payment"/>
        <field name="payment_method_ids"
                eval="[Command.set([
                         ref('payment.payment_method_card'),
                         ref('payment.payment_method_netbanking'),

                     ])]"/>
    </record>

    <record id="account_payment_method_razorpay_payment" model="account.payment.method">
        <field name="name">Razorpay Custom</field>
        <field name="code">razorpay</field>
        <field name="payment_type">inbound</field>
    </record>

</odoo>