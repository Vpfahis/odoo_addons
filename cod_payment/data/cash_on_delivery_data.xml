<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <record id="payment_method_cod" model="payment.method">
        <field name="name">Cash on Delivery!</field>
        <field name="code">c_o_d</field>
        <field name="sequence">10</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="cod_payment/static/src/images/ic1.png"/>
        <field name="support_tokenization">True</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">partial</field>
    </record>

    <record id="payment_provider_cod" model="payment.provider">
        <field name="name">Cash on Delivery!</field>
        <field name="image_128" type="base64" file="cod_payment/static/src/images/ic1.png"/>
        <field name="module_id" ref="base.module_cod_payment"/>
        <field name="code">c_o_d</field>
        <field name="payment_method_ids" eval="[Command.set([ref('payment_method_cod')])]"/>
    </record>
</odoo>
