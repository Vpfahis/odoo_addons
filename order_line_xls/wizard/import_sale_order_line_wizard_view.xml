<odoo>
    <record id="view_import_sale_order_line_wizard" model="ir.ui.view">
        <field name="name">import.sale.order.line.wizard.form</field>
        <field name="model">import.sale.order.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Order Lines">
                <group>
                    <field name="file" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="order_id" invisible="1"/>
                </group>
                <footer>
                    <button name="import_lines" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
