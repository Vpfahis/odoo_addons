<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_monthly_auto_invoice" model="ir.cron">
            <field name="name">Auto Invoice</field>
            <field name="model_id" ref="hostel.model_hostel_room"/>
            <field name="state">code</field>
            <field name="code">model.action_monthly_auto_invoice()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="nextcall" eval="(datetime.now(pytz.UTC).replace(day=1, hour=0, minute=0, second=0, microsecond=0) + relativedelta(months=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        </record>
    </data>
</odoo>