<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_hostel_facility" model="ir.actions.act_window">
        <field name="name">Facility</field>
        <field name="res_model">hostel.facility</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_hostel_facility_list" model="ir.ui.view">
        <field name="name">hostel_facility.list</field>
        <field name="model">hostel.facility</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" decoration-bf="1"/>
                <field name="charge"/>
            </list>
        </field>
    </record>

    <record id="view_hostel_facility_form" model="ir.ui.view">
        <field name="name">hostel_facility.form</field>
        <field name="model">hostel.facility</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="charge" widget="monetary"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
        </field>
    </record>
    
</odoo>