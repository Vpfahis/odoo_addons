<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_hostel_student_leave" model="ir.actions.act_window">
        <field name="name">Leave</field>
        <field name="res_model">hostel.student.leave</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_hostel_student_leave_list" model="ir.ui.view">
        <field name="name">hostel_student_leave.list</field>
        <field name="model">hostel.student.leave</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id" width="400px" decoration-bf="1"/>
                <field name="leave_date" width="200px"/>
                <field name="arrival_date" width="400px"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-primary="state == 'new'"/>
            </list>
        </field>
    </record>

    <record id="view_hostel_student_leave_form" model="ir.ui.view">
        <field name="name">hostel_student_leave.form</field>
        <field name="model">hostel.student.leave</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="approve" string="Approve" type="object" class="btn-primary" groups = "hostel.group_hostel_admin,hostel.group_hostel_warden"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                        </group>
                    </group>
                    <group>
                        <group col="1">
                            <field name="leave_date"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group col="1">
                            <field name="arrival_date" />
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="hostel_leave_view_search" model="ir.ui.view">
        <field name="name">hostel_leave.search</field>
        <field name="model">hostel.student.leave</field>
        <field name="arch" type="xml">
        <search>
            <filter string="New" name="state" domain="[('state', '=', 'new')]"/>
            <group expand="0" string="Group By">
                <filter string="Leave Date" name="leave_date" context="{'group_by': 'leave_date'}"/>
           </group>
        </search>
        </field>
    </record>

</odoo>