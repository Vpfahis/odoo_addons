<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_hostel_cleaning_service" model="ir.actions.act_window">
        <field name="name">Cleaning Service</field>
        <field name="res_model">hostel.cleaning.service</field>
        <field name="view_mode">list,form</field>
    </record>

     <record id="view_hostel_cleaning_service_list" model="ir.ui.view">
        <field name="name">hostel_cleaning_service.list</field>
        <field name="model">hostel.cleaning.service</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="room_id" decoration-bf="1"/>
                <field name="start_time"/>
                <field name="cleaning_staff"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-primary="state == 'assigned'"/>
            </list>
        </field>
    </record>

    <record id="view_hostel_cleaning_service_form" model="ir.ui.view">
        <field name="name">hostel_cleaning_service.form</field>
        <field name="model">hostel.cleaning.service</field>
        <field name="arch" type="xml">
            <form string="Room">
                <header>
                    <button name="action_cleaning_assign" string="Assign" type="object" class="btn-primary" groups = "hostel.group_hostel_admin,hostel.group_hostel_staff"/>
                    <button name="action_cleaning_complete" string="Complete" type="object" class="btn-primary" groups = "hostel.group_hostel_admin,hostel.group_hostel_staff"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group col="1">
                            <field name="room_id"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group col="1">
                            <field name="cleaning_staff" />
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="hostel_cleaning_view_search" model="ir.ui.view">
        <field name="name">hostel_cleaning.search</field>
        <field name="model">hostel.cleaning.service</field>
        <field name="arch" type="xml">
        <search>
            <filter string="New" name="state" domain="[('state', '=', 'new')]"/>
            <filter string="Done" name="state" domain="[('state', '=', 'done')]"/>
            <group expand="0" string="Group By">
                <filter string="Room" name="room_id" context="{'group_by': 'room_id'}"/>
           </group>
        </search>
        </field>
    </record>

</odoo>