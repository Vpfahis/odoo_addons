<odoo>
    <record id="view_payment_provider_cash_on_delivery_form" model="ir.ui.view">
        <field name="name">payment.provider.form.cash_on_delivery</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='credentials']" position="attributes">
                <attribute name="invisible">code == 'cash_on_delivery'</attribute>
            </xpath>
            <xpath expr="//page[@name='messages']" position="after">
                <page string="Extra Charge" name="charge">
                    <group string="Charge Configuration" name="charges" invisible="not code == 'cash_on_delivery'">
                        <field name="payment_provider_charges" string="Default Charge"
                               help="Used when no conditional charges are defined" invisible="1"/>
                        <group>
                            <group colspan="4" col="4">
                                <field name="provider_charges_ids" widget="one2many_list" nolabel="1">
                                    <list editable="bottom">
                                        <field name="min_amount" string="Min Amount"/>
                                        <field name="max_amount" string="Max Amount"/>
                                        <field name="charge_amount" string="Charge"/>
                                    </list>
                                </field>
                            </group>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>